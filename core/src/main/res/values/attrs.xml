<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FaceView">
        <!-- 扫描框距离toolbar底部的距离，默认值为90dp -->
        <attr name="fv_topOffset" format="dimension|reference" />
        <!-- 扫描框边角线的宽度，默认值为3dp -->
        <attr name="fv_cornerSize" format="dimension|reference" />
        <!-- 扫描框边角线的长度，默认值为20dp -->
        <attr name="fv_cornerLength" format="dimension|reference" />
        <!-- 扫描框边角线的颜色，默认值为@android:color/white -->
        <attr name="fv_cornerColor" format="color|reference" />
        <!-- 扫描框边角线显示位置(相对于边框)，默认值为中间 -->
        <attr name="fv_cornerDisplayType">
            <enum name="center" value="1" />
            <enum name="inside" value="2" />
        </attr>
        <!-- 扫描框的宽度，默认值为200dp -->
        <attr name="fv_rectWidth" format="dimension|reference" />
        <!-- 除去扫描框，其余部分阴影颜色，默认值为#33FFFFFF -->
        <attr name="fv_maskColor" format="color|reference" />
        <!-- 扫描线的宽度，默认值为1dp -->
        <attr name="fv_scanLineSize" format="dimension|reference" />
        <!-- 扫描线的颜色，默认值为@android:color/white -->
        <attr name="fv_scanLineColor" format="color|reference" />
        <!-- 扫描线距离上下或者左右边框的间距，默认值为0dp -->
        <attr name="fv_scanLineMargin" format="dimension|reference" />
        <!-- 扫描边框的宽度，默认值为1dp -->
        <attr name="fv_borderSize" format="dimension|reference" />
        <!-- 扫描边框的颜色，默认值为@android:color/white -->
        <attr name="fv_borderColor" format="color|reference" />
        <!-- 扫描线从顶部移动到底部的动画时间，默认值为1000 -->
        <attr name="fv_animTime" format="integer" />
        <!-- 扫描框中心点在屏幕垂直方向的比例，当设置此值时，会忽略 qrcv_topOffset -->
        <attr name="fv_verticalBias" format="float" />
        <!-- Toolbar的高度，当有设置qrcv_isCenterVertical属性时，通过该属性来修正有Toolbar时导致扫描框垂直居中的偏差，默认值为0dp -->
        <attr name="fv_toolbarHeight" format="dimension|reference" />
        <!-- 扫描时的提示文案，默认值为null -->
        <attr name="fv_tipText" format="string|reference" />
        <!-- 提示文案字体大小，默认值为14sp -->
        <attr name="fv_tipTextSize" format="dimension|reference" />
        <!-- 提示文案颜色，默认值为@android:color/white -->
        <attr name="fv_tipTextColor" format="color|reference" />
        <!-- 提示文案是否在扫描框的底部，默认值为false -->
        <attr name="fv_isTipTextBelowRect" format="boolean" />
        <!-- 提示文案与扫描框之间的间距，默认值为20dp -->
        <attr name="fv_tipTextMargin" format="dimension|reference" />
        <!-- 是否把提示文案作为单行显示，默认值为false -->
        <attr name="fv_isShowTipTextAsSingleLine" format="boolean" />
        <!-- 是否显示提示文案的背景，默认值为false -->
        <attr name="fv_isShowTipBackground" format="boolean" />
        <!-- 提示文案的背景色，默认值为#22000000 -->
        <attr name="fv_tipBackgroundColor" format="color|reference" />
        <!-- 扫描线是否来回移动，默认值为true -->
        <attr name="fv_isScanLineReverse" format="boolean" />
        <!-- 是否只识别扫描框中的图像，默认值为false -->
        <attr name="fv_isOnlyDecodeScanBoxArea" format="boolean" />
    </declare-styleable>
</resources>